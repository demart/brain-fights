<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/BrainFightsActionBar</item>
        <item name="actionBarStyle">@style/BrainFightsActionBar</item>
        <item name="colorPrimary">@color/ttk_lightGreen</item>
        <item name="colorPrimaryDark">@color/ttk_green</item>
        <item name="colorAccent">@color/ttk_orange</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>
    <style name="BrainFightsActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/ttk_green</item>
        <item name="background">@color/ttk_green</item>
    </style>
    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="colorButtonNormal">@color/ttk_green</item>
        <item name="android:colorButtonNormal" tools:ignore="NewApi">@color/ttk_green</item>
        <item name="colorControlNormal">@color/ttk_lightGreen</item>
        <item name="colorControlActivated">@color/ttk_green</item>
        <item name="colorControlHighlight">@color/ttk_orange</item>
        <item name="android:textColorHint">@color/ttk_lightGray</item>
    </style>
    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/ttk_white</item>
        <item name="android:textColorPrimary">@color/ttk_white</item>
        <item name="android:background">@color/ttk_green</item>
    </style>
    <style name="QuizAnswerButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/quiz_answer_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/ttk_lightGreenT</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="QuizLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/ttk_white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="elevation">2dp</item>
    </style>
    <style name="RatingUserHeader" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/ttk_white</item>
    </style>

    <style name="NavView">
        <item name="android:gravity">center_vertical</item>
    </style>
