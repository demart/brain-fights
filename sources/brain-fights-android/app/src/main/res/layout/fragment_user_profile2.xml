<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7"
    android:background="?android:colorBackground"
    android:clickable="true">
    <include layout="@layout/layout_profile2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/user_profile_total_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/ttk_black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сыграно"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/user_profile_won_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textStyle="bold"
                android:textColor="@color/ttk_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выйграно"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/user_profile_lose_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/ttk_black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Проиграно"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_margin="10dp">
        <android.support.v7.widget.CardView
            android:id="@+id/user_profile_btn_friend"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:elevation="2dp"
            app:cardCornerRadius="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="3dp">
            <ImageView
                android:id="@+id/user_profile_btn_friend_icon"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/add_user"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/user_profile_btn_friend_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="В друзья"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/user_profile_btn_game"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="5dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/ttk_green"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                >
                <ImageView
                    android:id="@+id/user_profile_btn_game_icon"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dice_filled"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:id="@+id/user_profile_btn_game_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Пригласить сыграть?"
                    android:textColor="@color/ttk_white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/structure"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Структурное подразделение"
                    android:textSize="18dp"
                    android:textColor="@color/ttk_black"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/orgstruct_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!--<include layout="@layout/layout_orgstuct_userprofile"/>-->
            <!--<include layout="@layout/layout_orgstuct_userprofile"/>-->
            <!--<include layout="@layout/layout_orgstuct_userprofile"/>-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>