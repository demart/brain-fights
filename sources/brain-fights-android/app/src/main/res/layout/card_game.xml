        <com.github.siyamed.shapeimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_profile_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_default_avatar3"
            android:scaleType="fitCenter"
            app:siBorderWidth="1dp"
            app:siBorderColor="@android:color/white"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_weight="3"
           >
            <TextView
                android:id="@+id/gamer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя игрока"
                android:textSize="16dp"
                android:singleLine="true"
                android:gravity="left"
                android:textColor="@color/ttk_white"
                />
            <TextView
                android:id="@+id/gamer_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ttk_white"
                android:text="Должность игрока"
                android:textSize="14dp"
                android:singleLine="true"
                android:gravity="left"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp">
            <ImageView
                android:id="@+id/game_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/circled_right"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:alpha="0.5"
                />
            <TextView
                android:id="@+id/game_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Победа!"
                android:textColor="@color/ttk_white"
                android:textSize="12dp"

                />
            </RelativeLayout>
            <TextView
                android:id="@+id/game_card_time_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="23 мин"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"

                android:textColor="@color/ttk_white"/>
            </RelativeLayout>
