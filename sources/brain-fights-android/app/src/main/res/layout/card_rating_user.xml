<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:elevation="0dp">
    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:weightSum="7">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/its_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Это я"
                android:textColor="@color/ttk_green"
                android:textStyle="italic"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/rating_user_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textColor="@color/ttk_black"/>
            <TextView
                android:id="@+id/position_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="(+ 5)"
                android:textColor="@color/ttk_green"
                android:textStyle="italic"
                android:textSize="14dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rating_user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ttk_black"
                android:text="Имя сотрудника Василий Адибабаевич Пушекин Тертий или четверты смотря как сяитать"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/rating_user_userposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ttk_darkGary"
                android:text="Должность"
                android:textSize="16dp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:id="@+id/rating_user_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/ttk_green"
            android:textSize="22dp"/>
            <TextView
                android:id="@+id/score_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="(+ 5)"
                android:textColor="@color/ttk_green"
                android:textStyle="italic"
                android:textSize="14dp"/>
        </RelativeLayout>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text=">"-->
            <!--android:textColor="@color/ttk_darkGary"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center_vertical|center_horizontal"-->
            <!--android:layout_gravity="center_horizontal|center_vertical"-->
            <!--android:textSize="22dp"/>-->
        <ImageView
            android:id="@+id/rating_user_toprofile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_marginRight="-15dp"
            android:src="@drawable/forward_green"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>