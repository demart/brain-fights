<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/rating_department_it_my_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:textSize="12dp"
                android:text="Мой"
                android:textStyle="italic"
                android:textColor="@color/ttk_green"/>
            <TextView
                android:id="@+id/rating_department_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/ttk_black"
                android:text="1"/>
            <TextView
                android:id="@+id/rating_department_place_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="(+1)"
                android:textSize="12dp"
                android:textStyle="italic"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
            <TextView
                android:id="@+id/rating_department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="12dp"
                android:text="Имя департамента"
                android:textColor="@color/ttk_black"
                android:singleLine="true"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/rating_department_games_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="12dp"
                android:text="Количество игроков: 3"
                android:textSize="14dp"
                android:textColor="@color/ttk_darkGary"/>
            </LinearLayout>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
            <TextView
                android:id="@+id/rating_department_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ttk_black"
                android:text="22"
                />
            <TextView
                android:id="@+id/rating_department_score_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="(+0)"
                android:textStyle="italic"
                android:textSize="12dp"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/rating_department_to_depart"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:src="@drawable/forward_green"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_horizontal|center_vertical"/>

    </LinearLayout>
</android.support.v7.widget.CardView >