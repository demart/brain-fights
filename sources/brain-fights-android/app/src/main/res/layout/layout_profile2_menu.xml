<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_profile_up_layout"
    android:layout_width="match_parent"
    android:layout_height="220dp">
    <RelativeLayout
        android:id="@+id/background_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/ttk_green"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/main_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true">
        >
        <LinearLayout
            android:id="@+id/place_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/avatar_layout"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="35dp"
                    android:textColor="@color/ttk_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Место"
                    android:textColor="@color/ttk_white"
                    android:textSize="20dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ttk_logo2"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:orientation="horizontal"
            >
            <!--<ImageView-->
            <com.github.siyamed.shapeimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_profile_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_default_avatar2"
                android:scaleType="fitCenter"
                android:layout_marginLeft="2dp"
                app:siBorderWidth="0dp"
                app:siBorderColor="@color/ttk_green"
                android:background="@drawable/bg_circle"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:id="@+id/user_profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Имя пользователя"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/ttk_white"
                        />
                    <TextView
                        android:id="@+id/user_profile_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Должность пользователя"
                        android:singleLine="true"
                        android:layout_marginRight="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/ttk_white"
                        android:layout_marginBottom="0dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/user_profile_last_entrance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="Заходил 21 ноября 2015"
                    android:textSize="13dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/ttk_black"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout >