<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Colored rectangle-->
    <item
        android:left="30dp"
        android:right="30dp">
        <shape android:shape="rectangle">


            <!--<size-->
                <!--android:width="100dp"-->
                <!--android:height="40dp" />-->
            <solid android:color="@color/ttk_green" />
        </shape>
    </item>

    <!-- This rectangle for the left side -->
    <!-- Its color should be the same as layout's background -->
    <item
        android:height="50dp"
        >
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="0"
            android:pivotX="0"
            android:pivotY="0"
            >
            <shape android:shape="rectangle">
                <solid android:color="@color/ttk_green" />
            </shape>
        </rotate>
    </item>

    <!-- This rectangle for the right side -->
    <!-- Their color should be the same as layout's background -->
    <item
        android:height="50dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="0"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="@color/ttk_green" />
            </shape>
        </rotate>
    </item>

</layer-list>