# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /                                                       module:secure

# Home page
GET     /                                       				Application.index
GET     /push/test	                              				User.testPush

# Admin
GET		/rest/users/store/read									AdmController.readUserList
POST	/rest/users/store/update								AdmController.updateUser
POST	/rest/users/store/create								AdmController.createNewUser
POST	/rest/users/store/destroy								AdmController.deleteUser
GET		/rest/admin/users/store/read							AdmController.readAdminUsers
POST	/rest/admin/users/store/create							AdmController.createAdminUser
POST	/rest/admin/users/store/update							AdmController.updateAdminUser
POST	/rest/admin/users/store/destroy							AdmController.destroyAdminUser
GET 	/rest/category/store/read								AdmController.readCategoryList
POST	/rest/category/store/create								AdmController.createNewCategory
POST	/rest/category/store/update								AdmController.updateCategory
POST	/rest/category/store/destroy							AdmController.destroyCategory
POST	/rest/questions/store/create							AdmController.createNewQuestion
GET		/rest/questions/store/read								AdmController.readQuestions
POST	/rest/questions/store/update							AdmController.updateQuestion
POST 	/rest/questions/store/destroy							AdmController.destroyQuestion
POST	/rest/check/name										AdmController.checkNameAdminInBase
GET		/rest/search/question/store/read						AdmController.searchQuestion
GET		/rest/category/combo/store/read							AdmController.createCategoryComboList
POST	/rest/login/out											AdmController.loginOut
POST	/rest/upload/category/image								AdmController.uploadImage
GET		/rest/department/combo/store/read						AdmController.createDepartmentComboList
POST	/rest/users/image/store/create                          AdmController.updateImageUrl
GET		/rest/search/users/store/read							AdmController.searchUsers

# USER COMMON
POST	/user/auth												UserController.authenticate

GET		/user/profile											UserController.getProfile
GET		/user/profile/											UserController.getProfile
GET		/user/profile/{id}										UserController.getProfile

POST	/device/push/register									UserController.registerOrUpdateDevicePushKey
POST	/device/push/register/									UserController.registerOrUpdateDevicePushKey

# USER FRIENDS
GET		/user/friends											UserController.getUserFriends
GET		/user/friends/add/{id}									UserController.addUserFriend
GET		/user/friends/remove/{id}								UserController.removeUserFriend

# USER SEARCH
GET		/search/user											SearchController.searchUsers
POST	/search/user											SearchController.searchUsers
POST	/search/user/											SearchController.searchUsers
GET		/search/department										SearchController.searchDepartments
GET		/search/department/										SearchController.searchDepartments
GET		/search/department/{id}									SearchController.searchDepartments
GET		/search/department/id/{id}								SearchController.searchDepartmentById

# GAME API
GET		/game/invitation/create									GameController.createInvitation
GET		/game/invitation/create/								GameController.createInvitation
GET		/game/invitation/create/{userId}						GameController.createInvitation
GET		/game/{gameId}/accept/invitation						GameController.acceptInvitation
GET		/game/{gameId}/accept/invitation/{accept}				GameController.acceptInvitation

GET		/games																			GameController.getUserGames
GET		/game/list																		GameController.getUserGames
GET		/game/list/grouped																GameController.getUserGamesGrouped
GET		/game/{gameId}																	GameController.getGameInformation
GET		/game/{gameId}/																	GameController.getGameInformation
GET		/game/{gameId}/round/generate/{categoryId}										GameController.generateGameRound
GET		/game/{gameId}/round/question													GameController.getRoundQuestions
GET		/game/{gameId}/round/{roundId}/questions										GameController.getRoundQuestions
GET		/game/{gameId}/round/{roundId}/questions/{questionId}/answer/{answerId}			GameController.answerQuestion
GET		/game/{gameId}/surrender														GameController.surrenderGame
GET		/game/{gameId}/gamer/{gamerId}/mark/as/viewed									GameController.markGameResultAsViewed

# STATISTICS API
GET		/stat/users/page/{page}/limit/{limit}												StatisticController.getUserStatistics
GET		/stat/departments/types																StatisticController.getDepartmentTypes
GET		/stat/departments/type/{departmentTypeId}/page/{page}/limit/{limit}					StatisticController.getDepartmentStatistics				

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
#GET     /*										staticDir:public/extjs

# Catch all
#*       /{controller}/{action}                  {controller}.{action}
